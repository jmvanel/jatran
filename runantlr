#!/bin/sh
echo Running 'java antlr.Tool $*' with antlr.jar appended to the CLASSPATH variable
export CLASSPATH
CLASSPATH=$CLASSPATH:lib/antlr-2.7.7.jar
echo the CLASSPATH variable $CLASSPATH
java antlr.Tool -o src/main/jatran/lexing src/main/jatran/lexing/java15.g
echo "fix by hand the package for classes generated by AntLR"
